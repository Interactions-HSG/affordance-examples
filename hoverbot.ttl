@prefix td: <https://www.w3.org/2019/wot/td#> .
@prefix htv: <http://www.w3.org/2011/http#> .
@prefix hctl: <https://www.w3.org/2019/wot/hypermedia#> .
@prefix wotsec: <https://www.w3.org/2019/wot/security#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix js: <https://www.w3.org/2019/wot/json-schema#> .
@prefix hsg: <http://semantics.interactions.ics.unisg.ch/hackathon21#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<urn:hoverbot_garuda> a td:Thing, hsg:Camera;
  dct:title "Smart tractor";
  td:hasSecurityConfiguration [ a wotsec:NoSecurityScheme
    ];
  td:hasBase <http://192.168.1.6/>;
  td:hasPropertyAffordance [ a td:PropertyAffordance, hsg:MpegVideoStream, js:NumberSchema;
      td:name "stream";
      td:hasForm [
          htv:methodName "GET";
          hctl:hasTarget <http://192.168.1.6/stream>;
          hctl:forContentType "application/json";
          hctl:hasOperationType td:readProperty
        ];
      td:isObservable false
    ];
  td:hasActionAffordance [ a td:ActionAffordance, hsg:Image;
      td:name "takeSnapshot";
      dct:description "Grab a picture of the farmland";
      td:hasForm [
          htv:methodName "POST";
          hctl:hasTarget <http://192.168.1.6/capture>;
          hctl:forContentType "image/jpeg";
          hctl:hasOperationType td:invokeAction
        ]
    ] .
